<rxui:ReactiveUserControl 
    x:Class="AmpedBiz.Pos.Shell.HeaderView"
    x:TypeArguments="local:HeaderViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:local="clr-namespace:AmpedBiz.Pos.Shell"
    xmlns:rxui="http://reactiveui.net"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <md:ColorZone Padding="16" md:ShadowAssist.ShadowDepth="Depth2" Mode="PrimaryMid">
        <DockPanel>
            <md:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False">
                <StackPanel>
                    <Button Content="Hello World" />
                    <Button Content="Nice Popup" />
                    <Button Content="Can't Touch This" IsEnabled="False" />
                    <Separator/>
                    <Button Content="Goodbye" />
                </StackPanel>
            </md:PopupBox>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="22" Name="TitleTextBlock">Material Design In XAML Toolkit</TextBlock>
        </DockPanel>
    </md:ColorZone>
</rxui:ReactiveUserControl>
